@using FAMAndIMS.Models.Pagination
@model PageSizeDdl
<div class="w-56 col-md-3 d-inline-flex align-items-center position-relative text-gray-700 dark-text-gray-300">
    <span class="mr-1">Show</span>&ensp;
    <select style="cursor:pointer" class="w-200 d-inline-block box mt-3 mt-sm-0 custom-select custom-select-sm form-control form-control-sm" name="pageSize">
        @foreach (var opt in Model.PageSizeOptions)
        {
            if (opt == Model.PageSize)
            {
                <option selected value="@opt">@opt</option>
            }
            else
            {
                <option value="@opt">@opt</option>
            }
        }
    </select>&ensp;
    <span class="ml-1">&nbsp;entries</span>
</div>