@using FAMAndIMS.Data.Model.EmployeeManagementModel
@model AdminUserVM
<form id="updateAdminUser" enctype="multipart/form-data" class="form-horizontal auth-form" method="post" autocomplete="off">
    <div class="card card-one">
        <ul>
            @if (ViewBag.Error is not null)
            {
                @foreach (var error in ViewBag.Error)
                {
                    <li class="text-danger">@error</li>
                }
            }
        </ul>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="firstName" class="form-label">First Name<span style="color:firebrick">*</span></label>
                        <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="John">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email<span style="color:firebrick">*</span></label>
                        <input asp-for="Email" type="email" class="form-control" id="email" placeholder="johndoe@gmail.com">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="roleId">Role <span style="color:firebrick">*</span></label>
                        <select asp-for="RoleId" id="roleId" class="form-select form-control" asp-items="ViewBag.roleDdlList" aria-label="form-select-lg example">
                            <option value="0"> Select Role </option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="countryId">Country<span style="color:firebrick">*</span></label>
                        <select asp-for="CountryId" id="countryId" class="form-select form-control" asp-items="ViewBag.countryDDLList" aria-label="form-select-lg example">
                            <option value="0"> Select Country </option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="municipalityId">Municipality<span style="color:firebrick">*</span></label>
                        <select asp-for="MunicipalityId" id="municipalityId" class="form-select form-control" asp-items="ViewBag.municipalityDDLList" aria-label="form-select-lg example">
                            <option value="0"> Select Municipality </option>
                        </select>
                    </div>

                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Is Active</label>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="lastName" class="form-label">Last Name<span style="color:firebrick">*</span></label>
                        <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Doe">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="genderId">Gender<span style="color:firebrick">*</span></label>
                        <select asp-for="GenderId" id="genderId" class="form-select form-control" asp-items="ViewBag.genderDDLList" aria-label="form-select-lg example">
                            <option value="0"> Select Gender </option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="provinceId">Province<span style="color:firebrick">*</span></label>
                        <select asp-for="ProvinceId" id="provinceId" class="form-select form-control" asp-items="ViewBag.provinceDDLList" aria-label="form-select-lg example">
                            <option value="0"> Select Province </option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="dob" class="form-label">DOB AD</label>
                        <input asp-for="DOBAD" type="date" class="form-control" id="dob" placeholder="John">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label for="userName" class="form-label">UserName<span style="color:firebrick">*</span></label>
                        <input asp-for="UserName" type="text" class="form-control" id="userName" placeholder="johndoe">
                    </div>
                    <div class="mb-3">
                        <label for="mobileNumber" class="form-label">Mobile Number<span style="color:firebrick">*</span></label>
                        <input asp-for="MobileNumber" type="text" class="form-control" id="mobileNumber" placeholder="9811111111">
                    </div>

                    <div class="form-group mb-3">
                        <label class="form-label" for="districtId">District<span style="color:firebrick">*</span></label>
                        <select asp-for="DistrictId" id="districtId" class="form-select form-control" asp-items="ViewBag.districtDDLList" aria-label="form-select-lg example">
                            <option value="0"> Select District </option>
                        </select>
                    </div>


                </div>
            </div>
            <div class="modal-footer mt-3">
                <button type="button" class="btn btn-dark waves-effect" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary" type="submit">Submit <i class="ri-send-plane-fill"></i></button>
            </div>
            <!-- card-body -->
        </div><!-- card -->
    </div>
</form>
<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("AdminUserUpdate", "AdminUserManagement")',
        containerSelector: '#add-new .modal-body',
        selector: '#updateAdminUser'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');

        Pagination.getData();
    });

    
</script>