@using FAMAndIMS.Data.Model.GlobalSettingModel.UnitModel
@model UnitVM
<form id="formDeleteUnit" method="post" autocomplete="off" class="text-center">
    <input type="hidden" asp-for="Id" />
    <i class="fa fa-circle-xmark text-danger fa-5x mb-20 m-t-15 "></i>
    <h3 class="m-t-25">Are you sure?</h3>
    <p class="m-t-25 m-b-15">
        Do you really want to delete these records?<br>
        This process cannot be undone
    </p>

    <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-sm btn-primary">Delete</button>
    </div>
</form>

<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("DeleteUnit", "Unit")',
        containerSelector: '#add-new .modal-body',
        selector: '#formDeleteUnit'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');
        Pagination.getData();
    });
</script>