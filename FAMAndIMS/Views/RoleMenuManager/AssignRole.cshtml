@using FAMAndIMS.Data.Model.RoleMenuManagerModel
@model List<MenuRoleWithChild>
@{
}
<div class="row">
    <!-- [ Invoice ] start -->
    <div class="container ">
        <div class="g-col-12 g-col-lg-12 g-col-xxl-12">
            <div class="intro-y">
                <div class="row mt-3">
                    <div class="col-md-6">
                        <input value="@ViewBag.Roleid" id="roleid" type="hidden" />
                        <div>
                            <label for="update-profile-form-1" class="form-label">Role Name</label>
                            <input id="update-profile-form-1" type="text" class="form-control" placeholder="Admin" value="@ViewBag.Rolename" disabled>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="">
                            <label for="update-profile-form-1" class="form-label">Username</label>
                            <input id="update-profile-form-1" type="text" class="form-control" placeholder="Input text" value="TEST USERNAME" disabled>
                        </div>
                    </div>
                </div>
                <form method="post">

                    <table id="PermissionCheckbox" class="table table-striped mt-3 assign-table" style="vertical-align:baseline">
                        <thead class="table-light">
                            <tr>
                                <th class="text-nowrap">Menu Title</th>
                                <th class="text-nowrap">
                                    <input onchange="ValidationAllfunc('View')" @ViewBag.Viewall id="ViewAll" class="viewallclass" type="checkbox">
                                    View
                                </th>
                                <th class="text-nowrap">
                                    <input onchange="ValidationAllfunc('Create')" @ViewBag.Createall id="CreateAll" type="checkbox">
                                    Create
                                </th>
                                <th class="text-nowrap">
                                    <input onchange="ValidationAllfunc('Edit')" @ViewBag.Editall id="EditAll" type="checkbox">
                                    Edit
                                </th>
                                <th class="text-nowrap">
                                    <input onchange="ValidationAllfunc('Delete')" @ViewBag.Deleteall id="DeleteAll" type="checkbox">
                                    Delete
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr style="color:green">

                                    <td>@item.Title</td>
                                    <td><input asp-for="@item.ViewPer" onchange="ValidationListFun('View',@item.Id,@item.SubParentId)" id="viewper-@item.Id" type="checkbox" class="ViewCheck"></td>
                                    <td><input asp-for="@item.CreatePer" onchange="ValidationListFun('Create',@item.Id,@item.SubParentId)" id="createper-@item.Id" type="checkbox" class="CreateCheck"></td>
                                    <td><input asp-for="@item.UpdatePer" onchange="ValidationListFun('Edit',@item.Id,@item.SubParentId)" id="editper-@item.Id" type="checkbox" class="EditCheck"></td>
                                    <td><input asp-for="@item.DeletePer" onchange="ValidationListFun('Delete',@item.Id,@item.SubParentId)" id="deleteper-@item.Id" type="checkbox" class="DeleteCheck"></td>
                                    <td hidden><input type="hidden" class="menuval" asp-for="@item.Id" /></td>
                                </tr>
                                @foreach (var child in item.SubMenuItems)
                                {
                                    <tr class="Row-@child.SubParentId">

                                        <td>@child.Title</td>
                                        <td><input asp-for="@child.ViewPer" onchange="ValidationListFun('View',@child.Id,@child.SubParentId)" id="viewper-@child.Id" type="checkbox" class="ViewCheck"></td>
                                        <td><input asp-for="@child.CreatePer" onchange="ValidationListFun('Create',@child.Id,@child.SubParentId)" id="createper-@child.Id" type="checkbox" class="CreateCheck"></td>
                                        <td><input asp-for="@child.UpdatePer" onchange="ValidationListFun('Edit',@child.Id,@child.SubParentId)" id="editper-@child.Id" type="checkbox" class="EditCheck"></td>
                                        <td><input asp-for="@child.DeletePer" onchange="ValidationListFun('Delete',@child.Id,@child.SubParentId)" id="deleteper-@child.Id" type="checkbox" class="DeleteCheck"></td>
                                        <td hidden><input type="hidden" class="menuval" asp-for="@child.Id" /></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </form>
            </div>

            <div class="modal-footer">

                <button type="button" class="btn btn-dark waves-effect" data-bs-dismiss="modal">Cancel</button>

                <button type="submit" onclick="PostCheckBox()" class="btn btn-sm btn-primary">Update Role</button>
            </div>
        </div>
    </div>
    <!-- [ Invoice ] end -->

</div>
<script src="~/js/assignrole.js"></script>