@using FAMAndIMS.Data.Model.InventoryManagementModel.PurchaseItemModel
@model PurchaseItemVM
<form id="savePurchaseItem" enctype="multipart/form-data" class="form-horizontal auth-form" method="post" autocomplete="off">
    <div class="card card-one">
        <ul>
            @if (ViewBag.Error is not null)
            {
                @foreach (var error in ViewBag.Error)
                {
                    <li class="text-danger">@error</li>
                }
            }
        </ul>
        <div class="card-body p-3">
            <div class="row">
                <div class="col">
                    <div class="form-group mb-3">
                        <label class="form-label" for="ItemId">Item<span style="color:firebrick">*</span></label>
                        <select asp-for="ItemId" id="ItemId" class="form-select form-control" asp-items="ViewBag.itemDdlList" aria-label="form-select-lg example">
                            <option value="0"> Select Item </option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="Quantity" class="form-label">Quantity</label>
                        <input asp-for="Quantity" type="number" class="form-control" id="Quantity" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="PurchaseAmount" class="form-label">Purchase Amount</label>
                        <input asp-for="PurchaseAmount" type="number" class="form-control" id="PurchaseAmount" placeholder="">
                    </div>
                    
                    <div class="mb-3">
                        <label for="PurchaseDateBS" class="form-label">Purchase Date BS</label>
                        <input asp-for="PurchaseDateBS" type="text" class="form-control" id="PurchaseDateBS" placeholder="">
                    </div>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                        <label class="form-check-label" for="flexSwitchCheckDefault">Is Active</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group mb-3">
                        <label class="form-label" for="VendorId">Vendor</label>
                        <select asp-for="VendorId" id="VendorId" class="form-select form-control" asp-items="ViewBag.vendorDdlList" aria-label="form-select-lg example">
                            <option value="0"> Select Vendor </option>
                        </select>
                    </div>
                  @*   <div class="form-group mb-3">
                        <label class="form-label" for="UnitId">Unit</label>
                        <select asp-for="UnitId" id="UnitId" class="form-select form-control" asp-items="ViewBag.unitDdlList" aria-label="form-select-lg example">
                            <option value="0"> Select Unit </option>
                        </select>
                    </div> *@
                    <div class="mb-3">
                        <label for="Rate" class="form-label">Rate</label>
                        <input asp-for="Rate" type="number" class="form-control" id="Rate" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="VatAmount" class="form-label">Vat Amount</label>
                        <input asp-for="VatAmount" type="number" class="form-control" id="VatAmount" placeholder="">
                    </div>
                    <div class="mb-3">
                        <label for="PurchaseDate" class="form-label">Purchase Date</label>
                        <input asp-for="PurchaseDate" type="date" class="form-control" id="PurchaseDate" placeholder="">
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer mt-3">
            <button type="button" class="btn btn-dark waves-effect" data-bs-dismiss="modal">Cancel</button>
            <button class="btn btn-primary" type="submit">Submit <i class="ri-send-plane-fill"></i></button>
        </div>
        <!-- card-body -->
    </div><!-- card -->
    </div>
</form>
<script>

    FormHandler.init({
        method: 'POST',
        actionUrl: '@Url.Action("SavePurchaseItem", "PurchaseItem")',
        containerSelector: '#add-new .modal-body',
        selector: '#savePurchaseItem'
    }, function () {
        $("#add-new .modal-body").html("");
        $("#add-new .modal-title").html("");
        $("#add-new").modal('hide');

        Pagination.getData();
    });
    $(document).ready(function () {
        document.getElementById("flexSwitchCheckDefault").checked = true;
        $("#PurchaseDateBS").nepaliDatePicker({
            container: "#add-new",
        });
    })
</script>