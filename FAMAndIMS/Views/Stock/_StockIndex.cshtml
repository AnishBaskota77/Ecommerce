@using FAMAndIMS.Data.Model.InventoryManagementModel.StockModel
@using FAMAndIMS.Data.Model.Paging
@using FAMAndIMS.Models.Pagination
@model PagedResponse<StockListModel>
@{
    int Sn = 1;
}
<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th scope="col">SN</th>
            <th scope="col">Item Name</th>
            <th scope="col">Total Purchase Item</th>
            <th scope="col">Total Issued Item</th>
            <th scope="col">Remaining Item</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <th scope="row">@Sn</th>
                <td>
                    @item.ItemName
                </td>
                <td>
                    @item.TotPurchaseItem
                </td>
                <td>
                    @item.TotIssuedItem
                </td>
                <td>
                    @item.RemainingItem
                </td>
            </tr>
            Sn = Sn + 1;
        }


    </tbody>
</table>
<partial name="_PaginationFooter"
         model="new PaginationFooter(Model.PageNumber, Model.PageSize, Model.Items.Count(), Model.FilteredCount, Model.TotalCount, Model.TotalPages)" />